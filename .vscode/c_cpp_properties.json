{
	"version": 4,
	"configurations": [
		{
			"name": "Linux",
			"includePath": [
				"${workspaceFolder}/node_modules/node-addon-api/**",
				"${workspaceFolder}/node_modules/**",
				"${workspaceFolder}/**",
				"/usr/include/node"
			],
			"defines": [

			],
			"compilerPath": "/usr/bin/clang",
			"cStandard": "c99",
			"cppStandard": "c++20",
			"intelliSenseMode": "linux-clang-x64",
			"compilerArgs": [
					"-I/usr/include/node",
					"-I${workspaceFolder}/node_modules/node-addon-api",
					"-fdiagnostics-color=always",
					"-fno-rtti",
					"-fno-exceptions",
					"-std=c++20",
					"-fpermissive",
					"-fno-exceptions",
					"-w",
					"-fpermissive",
					"-fPIC",
					"-static"
			]
		}
	]
}
